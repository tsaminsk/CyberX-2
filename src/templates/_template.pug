block variables

doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        title #{title}
        meta(content="Matvey Phoenix" name="author")
        meta(content="" name="description")
        meta(content="width=device-width, initial-scale=1" name="viewport")
        meta(content="ie=edge" http-equiv="x-ua-compatible")
        <link rel="apple-touch-icon" sizes="180x180" href="./assets/images/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="./assets/images/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="./assets/images/favicon/favicon-16x16.png">
        <link rel="manifest" href="./assets/images/favicon/site.webmanifest">
        script(src=scriptLink)
        link(rel='stylesheet' href='./assets/styles/main.min.css')

    body
        include ./vars/_var
        include ./vars/_var-maps
        include ./vars/_crumbs-vars
        include ./mixins/_mixins
        
        +headerBlock(topMenu, pageUrl, headerClass)

        block content

        include ./modules/_popup
        include ./modules/_footer
        script(src="./assets/scripts/libs.min.js")
        script(src="./assets/scripts/script.min.js")